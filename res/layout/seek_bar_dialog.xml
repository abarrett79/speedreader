<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/seek_bar_dialog_root"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent">
	<SeekBar android:id="@+id/seek_bar"
			 android:layout_width="fill_parent"
			 android:layout_height="wrap_content"
			 android:layout_marginTop="12dip"
			 android:layout_marginBottom="1dip"
			 android:layout_marginLeft="10dip"
			 android:layout_marginRight="10dip"
			 android:layout_centerHorizontal="true" />
	<TextView android:id="@+id/progress_percent"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:paddingBottom="12dip"
			  android:layout_marginLeft="10dip"
			  android:layout_marginRight="10dip"
			  android:layout_alignParentLeft="true"
			  android:layout_below="@id/seek_bar" />
	<TextView android:id="@+id/progress_number"
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:paddingBottom="12dip"
			  android:layout_marginLeft="50dip"
			  android:layout_marginRight="15dip"
			  android:layout_alignParentLeft="true"
			  android:layout_below="@id/seek_bar" />
	<Button android:id="@+id/seek_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/okay"
			android:layout_marginRight="10dip"
			android:layout_alignParentRight="true"
			android:layout_below="@id/seek_bar" />
	<Button android:id="@+id/bookmark_button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/add_bookmark"
			android:layout_marginRight="20dip"
			android:layout_toLeftOf="@id/seek_button"
			android:layout_below="@id/seek_bar" />
</RelativeLayout>
